generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscription {
  id Int @id @default(autoincrement())
  numberOfCharges Int
  chargeAmount Float
  chargeFrequencyInDays Int
  startDate DateTime
  status String
  statusDate DateTime
  cancellationDate DateTime?
  nextCycle DateTime?
  subscriberId Int  
}